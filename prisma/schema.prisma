generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  EDITOR
  VIEWER
}

enum Channel {
  SMS
  WHATSAPP
  EMAIL
}

enum Direction {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  PENDING
  SENT
  DELIVERED
  READ
  FAILED
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  emailVerified Boolean  @default(false)
  role          UserRole @default(VIEWER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  avatar     String?

  messages Message[]
  notes    Note[]
  sessions Session[]
  accounts Account[]
  assignedConversations Conversation[] @relation("AssignedConversations")

  @@map("users")
}

model Contact {
  id    String  @id @default(cuid())
  name  String?
  phone String? @db.VarChar(32)
  email String? @db.VarChar(255)

  lastContactedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages Message[]
  Note     Note[]
  conversations Conversation[]
  @@index([phone])
  @@index([email])
  @@map("contacts")
}

model Message {
  id String @id @default(cuid())

  channel   Channel
  content   String
  direction Direction
  status    MessageStatus @default(PENDING)

  externalId  String?
  providerRaw Json?

  contactId String
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)


  @@unique([channel, externalId])
  @@index([contactId, createdAt])
  @@map("messages")
}

model Note {
  id      String @id @default(cuid())
  content String

  contactId String
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([contactId])
  @@map("notes")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id           String    @id @default(cuid())
  userId       String
  accountId    String
  providerId   String
  accessToken  String?
  refreshToken String?
  idToken      String?
  expiresAt    DateTime?
  password     String? // ‚Üê Password stored here
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@map("accounts")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime

  @@unique([identifier, value])
  @@map("verifications")
}

enum ConversationState {
  OPEN
  WAITING
  CLOSED
}

model Conversation {
  id            String            @id @default(cuid())
  contactId     String
  contact       Contact           @relation(fields: [contactId], references: [id], onDelete: Cascade)
  
  state         ConversationState @default(OPEN)
  assignedToId  String?
  assignedTo    User?             @relation("AssignedConversations", fields: [assignedToId], references: [id], onDelete: SetNull)
  
  lastMessageAt DateTime          @default(now())
  
  messages      Message[]
  
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  
  @@index([state, assignedToId])
  @@index([contactId])
  @@map("conversations")
}